{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "composite": true,
      "jsx": "preserve",
      "lib": ["es2019", "DOM", "DOM.Iterable"],
      "types": ["vitest/globals"],
      "skipLibCheck": true,
      "resolveJsonModule": true, // 👈 允许 import JSON
    },
    "include": [
     "packages",
     "typings/env.d.ts"
    ],
    "exclude": [
      "node_modules",
      "node_modules/**/*.ts",
      "**/dist",
      "**/__tests__/**/*",
      "**/gulpfile.ts",
      "**/test-helper",
      "packages/test-utils",
      "**/*.md"
    ]
  }
  