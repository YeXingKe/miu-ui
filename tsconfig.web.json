{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "composite": true,
      "jsx": "preserve",
      "lib": ["ES2019", "DOM", "DOM.Iterable"],
      "types": ["vue"],
      "skipLibCheck": true,
      "resolveJsonModule": true, // 👈 允许 import JSON
    },
    "include": ["packages/*", "typings/env.d.ts"],
    "exclude": [
      "node_modules",
      "**/dist",
      "**/__tests__/**/*",
      "**/gulpfile.ts",
      "**/test-helper",
      "packages/test-utils",
      "**/*.md"
    ]
  }
  