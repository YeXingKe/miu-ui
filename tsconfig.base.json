{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "noImplicitAny": false, // 关闭隐式 any 报错
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true, // 👈 允许 import JSON
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": ["node"],
    "paths": {
      "@miu-ui/components": ["packages/components"],
      "@miu-ui/utils": ["packages/utils"],
      "miu-ui": ["packages/miu-ui"],
      "~/":["packages/components/*"]
    },
    "preserveSymlinks": true
  },
}
